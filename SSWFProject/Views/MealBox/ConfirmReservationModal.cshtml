@model MealBox

<div class="modal fade" id="reservationModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Wil Je Echt Reserveren?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body d-flex align-items-start">
                <button type="button" class="btn btn-lightgreen me-1" data-bs-dismiss="modal">Annuleren</button>
                <form asp-area="" asp-controller="MealBox" asp-action="ReserveMealBox" method="post" asp-route-id="@Model?.Id">
                    <input asp-for="@Model.Id" type="hidden" />
                    <button type="submit" class="btn btn-lightgreen">Reserveren</button>
                </form>
            </div>
        </div>
    </div>
</div>
