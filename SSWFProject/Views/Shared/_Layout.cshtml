<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SSWFProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SSWFProject.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3" id="mainNav">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/appel-logo.png" class="d-inline-block align-top" alt="" id="navbarLogo">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="MealBox" asp-action="MealBoxes">Pakketten</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Over Ons</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (User.HasClaim("UserType", "employeeuser")) {
                            <li class="nav-item">
                                <a class="btn nav-link" asp-area="" asp-controller="Account" asp-action="Login"><i class="bi bi-person" style="font-size: 30px; color: white;"></i></a>
                            </li>
                            <li class="nav-item">
                                <a class="btn nav-link" asp-area="" asp-controller="Account" asp-action="Admin"><i class="bi bi-key" style="font-size: 30px; color:white;"></i></a>
                            </li>
                        } else if (User.HasClaim("UserType", "studentuser")) {
                            <li class="nav-item">
                                <a class="btn nav-link" asp-area="" asp-controller="Account" asp-action="Profile"><i class="bi bi-person" style="font-size: 30px; color: white;"></i></a>
                            </li>
                            <li class="nav-item">
                                <a class="btn nav-link" asp-area="" asp-controller="Account" asp-action="EmployeeLogin"><i class="bi bi-key" style="font-size: 30px; color:white;"></i></a>
                            </li>
                        } else {
                            <li class="nav-item">
                                <a class="btn nav-link" asp-area="" asp-controller="Account" asp-action="Login"><i class="bi bi-person" style="font-size: 30px; color: white;"></i></a>
                            </li>
                            <li class="nav-item">
                                <a class="btn nav-link" asp-area="" asp-controller="Account" asp-action="EmployeeLogin"><i class="bi bi-key" style="font-size: 30px; color:white;"></i></a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="container-fluid p-0 m-0">
        <div class="col copyrightcol d-flex justify-content-center p-0 m-0">
            <p class="my-auto">© 2022 Copyright: EcoBox</p>
        </div>
        <footer class="d-flex flex-wrap justify-content-between py-3 text-white" id="mainFooter">
            <div class="col">
                <a href="/" class="d-flex align-items-center m-3">
                    <img src="~/images/appel-logo.png" alt="" id="footerLogo">
                </a>
            </div>

            <div class="col"></div>

            <div class="col">
                <h5>Socials</h5>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0">Instagram</a></li>
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0">Facebook</a></li>
                </ul>
            </div>

            <div class="col">
                <h5>Over Ons</h5>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0">Contact</a></li>
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0">Over Ons</a></li>
                </ul>
            </div>

            <div class="col">
                <h5>Juridisch</h5>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0">Privacy</a></li>
                </ul>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
